        }
        
        .nav-item {
            margin-bottom: 0.25rem;
        }
        
        .nav-link {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            color: rgba(255,255,255,0.8);
            text-decoration: none;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            border-radius: 0 25px 25px 0;
            margin-right: 1rem;
        }
        
        .nav-link:hover {
            background: linear-gradient(135deg, rgba(52, 152, 219, 0.2), rgba(41, 128, 185, 0.2));
            color: white;
            transform: translateX(5px);
        }
        
        .nav-link.active {
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
        }
        
        .nav-link.active .nav-indicator {
            opacity: 1;
            transform: scaleY(1);
        }
        
        .nav-icon {
            width: 20px;
            margin-right: 1rem;
            text-align: center;
            font-size: 1.1rem;
            transition: transform 0.3s ease;
        }
        
        .nav-link:hover .nav-icon {
            transform: scale(1.1);
        }
        
        .nav-indicator {
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%) scaleY(0);
            width: 3px;
            height: 20px;
            background: white;
            border-radius: 2px;
            opacity: 0;
            transition: all 0.3s ease;
        }
        
        .logout-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: #e74c3c;
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.3s ease;
            background: rgba(231, 76, 60, 0.1);
        }
        
        .logout-link:hover {
            background: rgba(231, 76, 60, 0.2);
            color: #c0392b;
            transform: translateX(5px);
        }
        
        .logout-icon {
            width: 20px;
            margin-right: 0.75rem;
            text-align: center;
            font-size: 1.1rem;
        }
        
        /* Collapsed Sidebar Styles */
        .modern-sidebar.collapsed .sidebar-logo-text,
        .modern-sidebar.collapsed .user-profile-info,
        .modern-sidebar.collapsed .nav-text,
        .modern-sidebar.collapsed .nav-section-title {
            opacity: 0;
            width: 0;
            overflow: hidden;
        }
        
        .modern-sidebar.collapsed .sidebar-user-profile {
            justify-content: center;
            padding: 1rem;
        }
        
        .modern-sidebar.collapsed .nav-link {
            justify-content: center;
            margin-right: 0;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            margin: 0.5rem auto;
        }
        
        .modern-sidebar.collapsed .nav-icon {
            margin-right: 0;
        }
        
        .modern-sidebar.collapsed .logout-link {
            justify-content: center;
            padding: 0.75rem;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            margin: 0 auto;
        }
        
        .modern-sidebar.collapsed .logout-icon {
            margin-right: 0;
        }
        
        .modern-sidebar.collapsed .logout-text {
            opacity: 0;
            width: 0;
            overflow: hidden;
        }
    </style>
</head>
