    <!-- Language Support Script -->
    <script>
        // Translation mapping for sidebar elements
        var sidebarTranslations = {
            tr: {
                'dashboard': 'Dashboard',
                'appointments': 'Randevular',
                'blood-tests': 'Kan Testleri',
                'hospitals': 'Hastaneler',
                'profile': 'Profil',
                'logout': 'Çıkış'
            },
            ar: {
                'dashboard': 'لوحة التحكم',
                'appointments': 'المواعيد',
                'blood-tests': 'فحوصات الدم',
                'hospitals': 'المستشفيات',
                'profile': 'الملف الشخصي',
                'logout': 'تسجيل الخروج'
            }
        };

        function changeLanguage(lang) {
            var dashboardText = document.querySelector('.dashboard-text');
            var appointmentsText = document.querySelector('.appointments-text');
            var bloodTestsText = document.querySelector('.blood-tests-text');
            var hospitalsText = document.querySelector('.hospitals-text');
            var profileText = document.querySelector('.profile-text');
            var logoutText = document.querySelector('.logout-text');
            
            if (dashboardText) {
                dashboardText.textContent = sidebarTranslations[lang]['dashboard'];
            }
            if (appointmentsText) {
                appointmentsText.textContent = sidebarTranslations[lang]['appointments'];
            }
            if (bloodTestsText) {
                bloodTestsText.textContent = sidebarTranslations[lang]['blood-tests'];
            }
            if (hospitalsText) {
                hospitalsText.textContent = sidebarTranslations[lang]['hospitals'];
            }
            if (profileText) {
                profileText.textContent = sidebarTranslations[lang]['profile'];
            }
            if (logoutText) {
                logoutText.textContent = sidebarTranslations[lang]['logout'];
            }

            if (lang === 'ar') {
                document.documentElement.dir = 'rtl';
                document.documentElement.lang = 'ar';
                document.body.classList.add('rtl');
                document.body.classList.remove('ltr');
            } else {
                document.documentElement.dir = 'ltr';
                document.documentElement.lang = 'tr';
                document.body.classList.add('ltr');
                document.body.classList.remove('rtl');
            }

            var languageText = document.querySelector('.language-text');
            if (languageText) {
                languageText.textContent = lang.toUpperCase();
            }
            
            localStorage.setItem('selectedLanguage', lang);
        }

        window.toggleSidebar = function() {
            var sidebar = document.getElementById('sidebar');
            var mainContent = document.getElementById('mainContent');
            
            if (sidebar && mainContent) {
                if (window.innerWidth >= 992) {
                    sidebar.classList.toggle('collapsed');
                    mainContent.classList.toggle('expanded');
                    localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
                }
            }
        };


        function setActiveNavItem() {
            var currentPath = window.location.pathname;
            var navLinks = document.querySelectorAll('.sidebar-navigation .nav-link, #mobileNavMenu .nav-link');
            
            for (var i = 0; i < navLinks.length; i++) {
                navLinks[i].classList.remove('active');
                if (navLinks[i].getAttribute('href') === currentPath) {
                    navLinks[i].classList.add('active');
                }
            }
        }
        
        function checkAuthentication() {
            var sidebar = document.getElementById('sidebar');
            var mainContent = document.getElementById('mainContent');
            
            var currentPath = window.location.pathname.toLowerCase();
            var isAuthPage = currentPath.includes('login') || currentPath.includes('register') || currentPath === '/';
            
            if (isAuthPage) {
                if (sidebar) {
                    sidebar.style.display = 'none';
                }
                if (mainContent) {
                    mainContent.classList.add('no-sidebar');
                    mainContent.style.marginLeft = '0';
                }
            } else {
                if (sidebar) {
                    sidebar.style.display = 'block';
                }
                if (mainContent) {
                    mainContent.classList.remove('no-sidebar');
                }
                
                var userName = sessionStorage.getItem('userName');
                var userEmail = sessionStorage.getItem('userEmail');
                
                // Update user name elements
                var userNameElements = document.querySelectorAll('#userName, #userText, #userNameLarge');
                for (var i = 0; i < userNameElements.length; i++) {
                    if (userName && userName !== 'Guest') {
                        userNameElements[i].textContent = userName;
                    } else {
                        userNameElements[i].textContent = 'Guest';
                    }
                }
                
                // Update user email element
                var userEmailElement = document.getElementById('userEmail');
                if (userEmailElement) {
                    if (userEmail && userEmail !== '') {
                        userEmailElement.textContent = userEmail;
                    } else {
                        userEmailElement.textContent = 'guest@hospital.com';
                    }
                }
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
                            // Disable WebForms on test pages and password reset pages to prevent JavaScript errors
                var currentPath = window.location.pathname.toLowerCase();
                var isTestPage = currentPath.includes('firebase') || currentPath.includes('test') ||
                               currentPath.includes('passwordreset') || currentPath.includes('resetpassword') ||
                               currentPath.includes('otpverification');
            
            if (isTestPage && typeof(Sys) !== 'undefined') {
                // Override Sys to prevent WebForms errors on test pages
                window.Sys = {
                    WebForms: {
                        PageRequestManager: {
                            getInstance: function() {
                                return {
                                    _initialize: function() {},
                                    add_beginRequest: function() {},
                                    remove_beginRequest: function() {},
                                    add_endRequest: function() {},
                                    remove_endRequest: function() {}
                                };
                            }
                        }
                    }
                };
                console.log('WebForms disabled for test page');
            }
            
            var languageSwitches = document.querySelectorAll('.language-switch');
            
            for (var i = 0; i < languageSwitches.length; i++) {
                languageSwitches[i].addEventListener('click', function(e) {
                    e.preventDefault();
                    var lang = this.getAttribute('data-lang');
                    changeLanguage(lang);
                });
            }

            checkAuthentication();
            
            var sidebar = document.getElementById('sidebar');
            if (sidebar) {
                var sidebarCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
                if (sidebarCollapsed) {
                    var mainContent = document.getElementById('mainContent');
                    sidebar.classList.add('collapsed');
                    mainContent.classList.add('expanded');
                }
            }

            if (document.getElementById('sidebar')) {
                setActiveNavItem();
            }

            var savedLanguage = localStorage.getItem('selectedLanguage');
            if (savedLanguage && (savedLanguage === 'tr' || savedLanguage === 'ar')) {
                changeLanguage(savedLanguage);
            }

            if (sidebar && window.innerWidth < 992) {
                var mainContent = document.getElementById('mainContent');
                sidebar.classList.add('collapsed');
                mainContent.classList.add('expanded');
            }
        });
        
        // Mobile sidebar functions
        function toggleMobileSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobileSidebarOverlay');
            const toggleBtn = document.getElementById('mobileMenuToggle');
            
            if (!sidebar) return;
            
            const isOpen = sidebar.classList.contains('mobile-open');
            
            if (isOpen) {
                sidebar.classList.remove('mobile-open');
                overlay.style.display = 'none';
                toggleBtn.classList.remove('active');
                toggleBtn.innerHTML = '<i class="fas fa-bars"></i>';
                document.body.style.overflow = '';
            } else {
                sidebar.classList.add('mobile-open');
                overlay.style.display = 'block';
                toggleBtn.classList.add('active');
                toggleBtn.innerHTML = '<i class="fas fa-times"></i>';
                document.body.style.overflow = 'hidden';
            }
        }
        
        function closeMobileSidebar() {
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('mobileSidebarOverlay');
            const toggleBtn = document.getElementById('mobileMenuToggle');
            
            if (sidebar) {
                sidebar.classList.remove('mobile-open');
                overlay.style.display = 'none';
                toggleBtn.classList.remove('active');
                toggleBtn.innerHTML = '<i class="fas fa-bars"></i>';
                document.body.style.overflow = '';
            }
        }
        
        // Initialize mobile sidebar functionality
        document.addEventListener('DOMContentLoaded', function() {
            const mobileToggle = document.getElementById('mobileMenuToggle');
            const overlay = document.getElementById('mobileSidebarOverlay');
            
            if (mobileToggle) {
                mobileToggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    toggleMobileSidebar();
                });
            }
            
            if (overlay) {
                overlay.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    closeMobileSidebar();
                });
            }
            
            window.addEventListener('resize', function() {
                if (window.innerWidth >= 992) {
                    closeMobileSidebar();
                }
            });
            
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeMobileSidebar();
                }
            });
        });
    </script>
    
    
    <!-- Translation System -->
    <script src="/Scripts/translations.js"></script>
</body>
